<apex:page standardController="Contact">
    <apex:form >
        <apex:pageBlock title="Quick Edit: {!Contact.Name}">
            <apex:pageBlockSection title="Contact Details" columns="1">
              <apex:inputSecret value="{!Contact.Phone}"/>
                <apex:outputField value="{!Contact.MobilePhone}"
                   label="Mobile #"/> 
                  <apex:inputSecret value="{!Contact.Email}"
                    label="{!Contact.FirstName + 'â€™s Email'}"/>                
            </apex:pageBlockSection>
             <apex:pageBlockButtons >
                 <apex:commandButton value="Save" action="{!save}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>